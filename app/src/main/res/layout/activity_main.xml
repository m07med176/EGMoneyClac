<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"


        android:background="@color/cat200"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cat_200"
            android:layout_margin="20dp"
            android:background="@drawable/input"

            android:layout_width="100dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:inputType="numberDecimal" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bound200" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"


        android:background="@color/cat100"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/cat_100"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:padding="5dp"

            android:background="@drawable/input"
            android:inputType="numberDecimal" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bound100" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"


        android:background="@color/cat50"

        android:orientation="horizontal">

        <EditText
            android:id="@+id/cat_50"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:padding="5dp"

            android:background="@drawable/input"
            android:inputType="numberDecimal" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bound50" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"


        android:background="@color/cat20"

        android:orientation="horizontal">

        <EditText
            android:id="@+id/cat_20"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:padding="5dp"

            android:background="@drawable/input"
            android:inputType="numberDecimal"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bound20" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"


        android:background="@color/cat10"

        android:orientation="horizontal">

        <EditText
            android:id="@+id/cat_10"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:padding="5dp"

            android:background="@drawable/input"
            android:inputType="numberDecimal"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bound10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"


        android:background="@color/cat5"

        android:orientation="horizontal">

        <EditText
            android:id="@+id/cat_5"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:padding="5dp"

            android:background="@drawable/input"
            android:inputType="numberDecimal" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bound5" />


    </LinearLayout>
    <View

        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:drawable/progress_horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"


        android:orientation="horizontal">

        <TextView
            android:id="@+id/result_calc_money"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="المجموع:"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">
        <ImageView
            android:background="@drawable/clickbtn"
            android:src="@drawable/baseline_sync_24"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/reset_btn"/>

        <ImageView
            android:background="@drawable/clickbtn"
            android:src="@drawable/ic_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/share_btn"
            android:layout_margin="5dp"/>



    </LinearLayout>

</LinearLayout>
</ScrollView>